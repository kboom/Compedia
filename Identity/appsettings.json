{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=AspIdUsers.db;"
  },
  "AllowedHosts": "*",
  "IdentityServer": {
    "IssuerUri": "urn:sso.company.com",
    "ApiScopes": [
      {
        "name": "api",
        "description": "Full access to API",
        "userClaims": [ "service" ]
      }
    ],
    "ApiResources": [
      {
        "name": "openid",
        "userClaims": "sub",
        "displayName": "Your user identifier"
      }
    ],
    "Clients": [
      {
        "Enabled": true,
        "ClientId": "local-dev",
        "ClientName": "Local Development",
        "ClientSecrets": [ { "Value": "secretashell" } ],
        "AllowedGrantTypes": [ "client_credentials" ],
        "AllowedScopes": [ "api" ]
      }
    ]
  }
}
